{
  "name": "repeat",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder build --mac",
    "clean": "rimraf dist node_modules/.cache .webpack",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "build": {
    "appId": "com.allonli.repeat",
    "productName": "Repeat",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "darkModeSupport": true
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!.git",
      "!build/.*",
      "!{.env,.env.example,.eslintrc.cjs,.gitignore,.prettierrc}",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!e2e/",
      "!hooks/",
      "!.angular",
      "!*.config.js",
      "!tsconfig.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "src/extraResources/",
        "to": "extraResources"
      }
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "dotenv": "^16.4.7",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^2.7.0",
    "rimraf": "^5.0.10",
    "tencentcloud-sdk-nodejs-tmt": "^4.0.1027",
    "test": "^3.3.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.8.4",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "electron-store": "^10.0.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.2",
    "get-video-duration": "^4.1.0",
    "querystring": "^0.2.1",
    "volcengine-sdk": "^0.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/src/renderer/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main/**",
      "!src/preload/**"
    ]
  }
}
